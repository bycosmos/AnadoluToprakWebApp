@model IEnumerable<Anadolu.Entitiess.Siparis>

@{
    ViewBag.Title = "Siparis1";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<div class="row">
    <div class="text-center col-md-12 mt-5">
        <h4>Siparişler</h4>


    </div>
</div>
<div class="row">

    <div class=" col md-12 mx-4 my-4">




        <table id="tbl" class="table table-sm table-responsive table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        <p> @Html.DisplayName("Ürun Adı") </p>
                    </th>
                    <th>

                        <p>
                            @Html.DisplayName("Ad-Soyad")
                        </p>
                    </th>
                    

                    <th id="Adres">

                        <p>
                            Telefon-Email-Adres
                           
                        </p>
                      
                        
                    </th>



                    <th>

                        <p>
                            @Html.DisplayNameFor(model => model.Adet)
                        </p>
                    </th>


                    <th id="Fiyat">



                        <p>
                            @Html.DisplayNameFor(model => model.Fiyat)
                        </p>
                    </th>
                    <th>

                        <p>
                            @Html.DisplayName("Tutar")
                        </p>
                    </th>

                    <th id="IlIlce">

                        <p>
                            @Html.DisplayName("İl-İlçe")
                        </p>



                    </th>

                    <th id="EkBilgi">

                        <p>
                            Ek Bilgi
                        </p>
                    </th>


                    <th>

                        <p>
                            @Html.DisplayName("Müşteri")
                        </p>
                    </th>
                    <th>

                        <p>
                            @Html.DisplayNameFor(model => model.Tarih)
                        </p>
                    </th>
                    <th id="DuzenlenmeTarihi">

                        <p>
                            @Html.DisplayName("Düzenleme Tarihi")
                        </p>
                    </th>
                    <th>

                        <p>
                            @Html.DisplayName("Durum")
                        </p>
                    </th>
                    <th></th>
                </tr>
            </thead>
            
            @foreach (var item in Model)
            {
            <tr>
                <td id="UrunAdi">
                    <p>


                        @Html.DisplayFor(modelItem => item.UrunAdi)
                    </p>
                </td>
                <td>

                    <p id="MusteriAdi">
                        @Html.DisplayFor(modelItem => item.MusteriAdiSoyAdi)
                    </p>
                </td>




                <td>

                    <p>

                        @Html.DisplayFor(modelItem => item.Telefon)
                    </p>
                    <p>

                        @Html.DisplayFor(modelItem => item.Email)
                    </p>
                    <p id="Adres">
                        @Html.DisplayFor(modelItem => item.Adres)
                    </p>
                </td>

                <td>
                    <p>

                        @Html.DisplayFor(modelItem => item.Adet)
                    </p>

                </td>
                <td id="Fiyat1">

                    <p>

                        @Html.DisplayFor(modelItem => item.Fiyat)
                    </p>
                </td>
                <td>

                    <p>

                        @Html.DisplayFor(modelItem => item.ToplamOrtalamaTutar)
                    </p>
                </td>

                <td id="IlIlce1">

                    <p>

                        @Html.DisplayFor(modelItem => item.Il)

                        @Html.DisplayFor(modelItem => item.Ilce)
                    </p>
                </td>

                <td id="EkBilgi1">

                    <p>

                        @Html.DisplayFor(modelItem => item.EkBilgi)
                    </p>
                </td>
                <th>

                    <p>

                        @Html.DisplayFor(model => item.Musteri)
                    </p>
                </th>
                <td>

                    <p>
                        @Html.DisplayFor(modelItem => item.Tarih)
                    </p>
                </td>
                <td id="DuzenlenmeTarihi1">

                    <p>

                        @Html.DisplayFor(modelItem => item.DüzenlenmeTarihi)
                    </p>
                </td>
                <td>

                    <p>

                        @Html.DisplayFor(modelItem => item.Durum)
                    </p>
                </td>

                <td>


                    <a href="/Admin/SiparisAdd/" class="btn btn-default">Y</a>


                    <a href="/Admin/SiparisEdit/@item.Id" class="btn btn-default">D</a>




                    <a href="/Admin/SiparisDelete/@item.Id" class="btn btn-default">S</a>

                    <script>
                            $("#@item.Id").click(function () {
                                var id = $("#@item.Id").val();




                                $.get("/Admin/_Siparisler/", { id: id }, function (d) {


                                    $("#m").modal();
                                    $("#list").html(d);

                                });
                            });


                    </script>



                </td>

                

            </tr>


            }

        </table>




    </div>


</div>



<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/ju/jq-3.3.1/dt-1.10.20/af-2.3.4/b-1.6.1/b-flash-1.6.1/cr-1.5.2/r-2.2.3/rr-1.2.6/sc-2.0.1/sp-1.0.1/sl-1.3.1/datatables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/ju/jq-3.3.1/dt-1.10.20/af-2.3.4/b-1.6.1/b-flash-1.6.1/cr-1.5.2/r-2.2.3/rr-1.2.6/sc-2.0.1/sp-1.0.1/sl-1.3.1/datatables.min.js"></script>
<script src="http://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"></script>

<script>

    $("#tbl").DataTable();
</script>


<!-- #Modal -->

<div class="modal" tabindex="-1" role="dialog" id="m">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="list">


        </div>
    </div>
</div>

