@model IEnumerable<Anadolu.Entitiess.Product>





@{
    ViewBag.Title = "Ürün Listesi";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}


<div class="row my-4 mx-4">

    <br>
    <div class="col-md-12 col-sm-12">
        <button class="btn btn-small btn-outline-dark" data-toggle="portfilter" data-target="all">
            Tüm Ürünler
        </button>
        <button class="btn btn-small btn-outline-dark" data-toggle="portfilter" data-target="Tugla">
            Tuğla
        </button>
        <button class="btn btn-small btn-outline-dark" data-toggle="portfilter" data-target="Kiremit">
            Kiremit
        </button>
        <button class="btn btn-small btn-outline-dark" data-toggle="portfilter" data-target="OzelUrun">
            Özel Ürünler
        </button>


        <a href="/Admin/ProductAdd/" class="btn btn-custon-four btn-primary">Yeni Ürün</a>



    </div>


    @foreach (var pro in Model)
    {



        <div class="col-md-6 my-3 d-sm-block d-none" data-tag="@pro.Category.Name">
            <div class=" card ">
                <div class="row">

                    <div class="col-md-4">
                        <img src="@pro.UrunResimAdres" alt="">


                        <a href="/Admin/ProductDelete/@pro.Id" class="btn btn-danger bottom">Sil</a>






                        <a href="/Admin/ProductEdit/@pro.Id" class="btn btn-success bottom">Düzenle</a>



                    </div>
                    <div class="col-md-8">
                        <h5 class="card-title mt-1 mb-1">@pro.Name </h5>




                        <table class="table table-striped">

                            <tbody>
                                <tr>
                                    <th><h6>Ağırlık(kg)</h6> </th>
                                    <td><h6>@pro.Agirlik</h6></td>

                                </tr>
                                <tr>
                                    <th scope="row"><h6>Boyut(cm)</h6> </th>
                                    <td><h6>@pro.Boyut</h6> </td>

                                </tr>
                                <tr>
                                    <th scope="row"><h6>Basınç Dayanımı(N/mm)</h6> </th>
                                    <td><h6>@pro.BasincDayanimi</h6> </td>

                                </tr>
                                <tr>
                                    <th scope="row"><h6>Isı iletkenliği()</h6> </th>
                                    <td><h6>0.32</h6> </td>

                                </tr>
                                <tr>
                                    <th scope="row"><h6>M² İçin Gereken Tuğla Sayısı (Adet)	</h6> </th>
                                    <td><h6>@pro.MetrekareTuglaSayisi</h6> </td>

                                </tr>
                                <tr>
                                    <th scope="row"><h6>Fiyat	</h6> </th>
                                    <td><h6>@pro.Fiyat</h6> </td>

                                </tr>
                                <tr></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-6 my-3 d-block d-sm-none" data-tag="@pro.Category.Name">
            <div>
                <div class="row">

                    <div class="col-md-4">
                        <img src="@pro.UrunResimAdres" alt="">


                        <a href="/Admin/ProductDelete/@pro.Id" class="btn btn-danger bottom">Sil</a>






                        <a href="/Admin/ProductEdit/@pro.Id" class="btn btn-success bottom">Düzenle</a>



                    </div>
                    <div class="col-md-8">
                        <h5 class="card-title mt-1 mb-1">@pro.Name </h5>




                        <table class="table table-striped">

                            <tbody>
                                <tr>
                                    <th><h6>Ağırlık(kg)</h6> </th>
                                    <td><h6>@pro.Agirlik</h6></td>

                                </tr>
                                <tr>
                                    <th scope="row"><h6>Boyut(cm)</h6> </th>
                                    <td><h6>@pro.Boyut</h6> </td>

                                </tr>
                                <tr>
                                    <th scope="row"><h6>Basınç Dayanımı(N/mm)</h6> </th>
                                    <td><h6>@pro.BasincDayanimi</h6> </td>

                                </tr>
                                <tr>
                                    <th scope="row"><h6>Isı iletkenliği()</h6> </th>
                                    <td><h6>0.32</h6> </td>

                                </tr>
                                <tr>
                                    <th scope="row"><h6>M² İçin Gereken Tuğla Sayısı (Adet)	</h6> </th>
                                    <td><h6>@pro.MetrekareTuglaSayisi</h6> </td>

                                </tr>
                                <tr>
                                    <th scope="row"><h6>Fiyat	</h6> </th>
                                    <td><h6>@pro.Fiyat</h6> </td>

                                </tr>
                                <tr></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    }

</div>

