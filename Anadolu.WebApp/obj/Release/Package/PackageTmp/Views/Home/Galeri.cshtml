@model Anadolu.WebApp.Models.GaleriModel



@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_LayoutPageGallery.cshtml";
}


<div class="my-3" style="text-align:center">
    <a class="btn btn-outline-primary" id="btnFotograf"><i class="fa fa-caret-right"></i> Fotoğraf</a>
    <a class="btn btn-outline-secondary" id="btnVideo"><i class="fa fa-play-circle mx-2"></i> Video</a>

</div>


<section class="features-section my-3" id="fotograf">
    <div class="container">
        <div class="row">
            @foreach (var Res in Model.photos)
            {


                <div class="col-lg-4 col-md-6">
                    <div class="feature-box">
                        <a href="@Res.Address" class="photography-entry img image-popup d-flex justify-content-start align-items-end" style="background-image: url(@Res.Address);">

                            <div class="text ml-4 mb-4">
                                @*<h3>@Res.Aciklama</h3>*@
                                <span class="tag">@Res.Aciklama</span>
                            </div>


                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Reserch section end  -->



<section class="features-section my-3" id="video" style="display:none">
    <div class="container">
        <div class="row">

            @foreach (var videolar in Model.videolars)
            {



                <div class="col-lg-4 col-md-6">
                    <div class=" feature-box embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="@videolar.Adres" allowfullscreen></iframe>
                    </div>


                </div>

            }

            @*<a>
                    <img class="img-fluid z-depth-1" src="https://mdbootstrap.com/img/screens/yt/screen-video-2.jpg" alt="video"
                         data-toggle="modal" data-target="#modal6">
                </a>*@

        </div>
    </div>
</section>
<script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>

<script type="text/javascript">



    $("#btnVideo").click(function () {

        $("#fotograf").hide(1000);
        $("#video").show(1000);



    });


    $("#btnFotograf").click(function () {

        $("#video").hide(1000);
        $("#fotograf").show(1000);


    });
</script>
