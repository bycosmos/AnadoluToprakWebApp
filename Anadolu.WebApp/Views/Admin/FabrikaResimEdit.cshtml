            @Html.EditorFor(model => model.ResimAdres, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ResimAdres, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-3">
        <img src="@Model.ResimAdres" />
        @Html.HiddenFor(model => model.ResimAdres)
